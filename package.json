{
  "name": "remend-ai",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cd api && npm run dev\" \"cd mobile-app && npx expo start --port 8081\"",
    "dev:api": "cd api && npm run dev",
    "dev:mobile": "cd mobile-app && npx expo start",
    "dev:i": "concurrently \"cd api && npm run dev\" \"cd mobile-app && npx expo start --ios --port 8081\"",
    "dev:a": "concurrently \"cd api && npm run dev\" \"cd mobile-app && npx expo start --android --port 8081\"",
    "lint": "eslint api mobile-app --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "api/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd api && eslint --fix \"$(echo \"$0\" | sed \"s|.*/api/||\" )\"'",
      "prettier --write"
    ],
    "api/**/*.{json,md}": [
      "prettier --write"
    ],
    "mobile-app/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd mobile-app && eslint --fix \"$(echo \"$0\" | sed \"s|.*/mobile-app/||\" )\"'",
      "prettier --write"
    ],
    "mobile-app/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  }
}
